# RouteSmith Environment Configuration
# Copy this file to .env and fill in your values
# At least one LLM provider API key is required

# ============================================
# LLM Provider API Keys (at least one required)
# ============================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini - https://makersuite.google.com/app/apikey
# (Has free tier - good for development)
GOOGLE_API_KEY=

# Groq - https://console.groq.com/keys
# (Has generous free tier - recommended for development)
GROQ_API_KEY=gsk_...

# ============================================
# AWS Bedrock (Optional - for enterprise features)
# ============================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# Azure OpenAI (Optional)
# ============================================

AZURE_API_KEY=
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# ============================================
# RouteSmith Settings
# ============================================

# Logging level: DEBUG, INFO, WARNING, ERROR
ROUTESMITH_LOG_LEVEL=INFO

# SQLite database for stats and feedback (local development)
ROUTESMITH_STATS_DB=./routesmith_stats.db

# Proxy server settings
ROUTESMITH_PROXY_HOST=127.0.0.1
ROUTESMITH_PROXY_PORT=9119
